{
  "name": "sugarform",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "turbo build",
    "lint": "turbo lint -- --max-warnings=0",
    "typecheck": "turbo typecheck",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,md,json}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,md,json}\""
  },
  "devDependencies": {
    "@manypkg/cli": "^0.21.1",
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@swc/core": "^1.3.100",
    "@types/multi-stage-sourcemap": "^0.3.4",
    "@types/node": "^20.10.4",
    "consola": "^3.2.3",
    "dts-bundle-generator": "^9.0.0",
    "esbuild": "^0.19.9",
    "esbuild-node-externals": "^1.11.0",
    "execa": "^8.0.1",
    "multi-stage-sourcemap": "^0.3.1",
    "prettier": "^3.1.0",
    "tsx": "^4.6.2",
    "turbo": "latest",
    "typescript": "^5.3.3"
  },
  "packageManager": "pnpm@8.9.0",
  "engines": {
    "node": ">=18"
  },
  "manypkg": {
    "ignoredRules": [
      "INTERNAL_MISMATCH",
      "ROOT_HAS_DEV_DEPENDENCIES",
      "INVALID_DEV_AND_PEER_DEPENDENCY_RELATIONSHIP"
    ]
  }
}
